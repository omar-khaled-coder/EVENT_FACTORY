<h2>Leave a Review for <%= @space.title %></h2>

<%= form_with model: @review, url: space_reviews_path(@space), local: true do |f| %>
  <div>
    <%= f.label :rating, "Rating (1-5)" %>
    <%= f.number_field :rating, in: 1..5, step: 1 %>
  </div>

  <div>
    <%= f.label :comment, "Your Review" %>
    <%= f.text_area :comment %>
  </div>

  <div>
    <%= f.submit "Submit Review" %>
  </div>
<% end %>
