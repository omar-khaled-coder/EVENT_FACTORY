<p style="color: green"><%= notice %></p>

<h1 class="page-title">Your Chatrooms</h1>

<div id="chatrooms">
  <% if @chatrooms.any? %>
    <% @chatrooms.each do |chatroom| %>
      <div class="chatroom-card">
        <div class="chatroom-header">
          <div class="chatroom-avatar-container">
            <% if current_user == chatroom.owner %>
              <%= image_tag(chatroom.user&.profile_picture.attached? ? chatroom.user.profile_picture : 'default-avatar.png', alt: "User Avatar", class: "chatroom-avatar") %>
            <% else %>
              <%= image_tag(chatroom.owner&.profile_picture.attached? ? chatroom.owner.profile_picture : 'default-avatar.png', alt: "Owner Avatar", class: "chatroom-avatar") %>
            <% end %>
          </div>
          <div class="chatroom-title">
            <h3>
              <% if current_user == chatroom.owner %>
                <%= chatroom.user&.first_name || "Unknown User" %>
              <% else %>
                <%= chatroom.owner&.first_name || "Unknown Owner" %>
              <% end %>
            </h3>
          </div>
        </div>

        <div class="chatroom-info">
          <p><strong>Messages:</strong> <%= chatroom.messages.count %></p>
          <p><strong>Space:</strong> <%= chatroom.space.title %></p>
        </div>

        <div class="chatroom-actions">
          <%= link_to "Open Chat", chatroom_path(chatroom), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="no-chatrooms-message">You don't have any chatrooms yet.</p>
  <% end %>
</div>

<div class="new-chatroom-link">
  <%= link_to "Start a New Chatroom", new_chatroom_path, class: "btn btn-success" %>
</div>

<style>
  /* Global styles */
  body {
    font-family: 'Arial', sans-serif;
  }

  .page-title {
    text-align: center;
    margin-top: 20px;
    font-size: 2rem;
    color: #333;
  }

  #chatrooms {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin: 30px 0;
    padding: 0 20px;
  }

  .chatroom-card {
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .chatroom-card:hover {
    transform: translateY(-5px);
  }

  .chatroom-header {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
  }

  .chatroom-avatar-container {
    flex-shrink: 0;
  }

  .chatroom-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
    margin-right: 15px;
  }

  .chatroom-title h3 {
    margin: 0;
    font-size: 1.3rem;
    color: #555;
  }

  .chatroom-info {
    margin: 10px 0;
    color: #777;
  }

  .chatroom-actions {
    margin-top: 15px;
    text-align: right;
  }

  .btn {
    padding: 10px 20px;
    color: white;
    border-radius: 5px;
    text-decoration: none;
    font-size: 1rem;
    transition: background-color 0.3s ease;
  }

  .btn-primary {
    background-color: #007bff;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  .btn-success {
    background-color: #28a745;
  }

  .btn-success:hover {
    background-color: #218838;
  }

  .new-chatroom-link {
    margin-top: 30px;
    text-align: center;
  }

  .no-chatrooms-message {
    text-align: center;
    color: #777;
    font-size: 1.1rem;
  }
</style>
