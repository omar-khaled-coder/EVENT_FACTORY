<p style="color: green"><%= notice %></p>

<h1>Chatrooms</h1>

<div id="chatrooms">
  <% @chatrooms.each do |chatroom| %>
    <%= render partial: 'chatroom', locals: { chatroom: chatroom, messages: chatroom.messages } %>
    <p>
      <%= link_to "Show this chatroom", chatroom %>
    </p>
  <% end %>
</div>

<%= link_to "New chatroom", new_chatroom_path %>
