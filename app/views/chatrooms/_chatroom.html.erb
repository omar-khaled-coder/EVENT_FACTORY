<h2>Chat with <%= chatroom.owner&.first_name || "Unknown Owner" %></h2>

<div class="messages">
  <% messages.each do |message| %>
    <p><strong><%= message.user.first_name %>:</strong> <%= message.content %></p>
  <% end %>
</div>


<%= form_with model: [chatroom, @message], local: true do |f| %>
  <div>
    <%= f.label :content, "Type your message" %><br>
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.submit "Send" %>
  </div>
<% end %>
