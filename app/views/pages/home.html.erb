<div class="hero-section">
  <div class="hero-content">
    <h1>Find Your Perfect Space</h1>
    <%= form_with url: spaces_path, method: :get, local: true, class: "search-form" do %>
      <%= text_field_tag :city, params[:city], placeholder: "Search by city", class: "search-input" %>
      <%= select_tag :space_type, options_for_select(["Event Venue", "Co-working Space", "Studio", "Classroom"], params[:space_type]), prompt: "Space Type", class: "search-select" %>
      <button type="submit" class="search-btn">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    <% end %>
  </div>
</div>


<!-- Space Types Section -->
<div class="space-types">
  <h2>Explore Space Types</h2>
  <div class="space-type-grid">
    <% ["Event Venue", "Co-working Space", "Studio","Wedding", "Shooting Location", "Rooftop", "Ceremony", "Prom Party", "Conference",
        "Workshop", "Classroom", "BirthDay parties", "Launch Event", "Art Show", "Meeting", "Corporate Event", "Media Event", "Outdoor Event",].each do |space_type| %>
      <%= link_to spaces_path(space_type: space_type), class: "space-type-card #{space_type.parameterize}" do %>
        <div class="space-type-content">
          <h3><%= space_type %></h3>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="how-it-works">
  <h2> How it Works </h2>

  <div class="splaces-slider">

    <ul class="slides">
      <li class="how-it-works-step">
        <%= image_tag "Find the perfect space.jpeg", style: "width: 132px;border-radius: 20px;margin-bottom: 15px;" %>
        <h2>Find the perfect space</h2>
        <p>
          Browse the marketplace and tailor your search to your activity needs.
        </p>
      </li>
      <li class="how-it-works-step">
        <%= image_tag "Book it with ease.jpeg", style: "width: 132px;border-radius: 20px;margin-bottom: 15px;" %>
        <h2>Book it with ease</h2>
        <p>
           Once you find a perfect match, book the space and pay online through our easy-to-use payment system.
        </p>
      </li>
      <li class="how-it-works-step">
        <%= image_tag "Meet, make or create.jpeg", style: "width: 132px;border-radius: 20px;margin-bottom: 15px;" %>
        <h2>Meet, make or create</h2>
        <p>
          Create a memorable experience in a memorable space, and enjoy!
        </p>
      </li>
    </ul>

  </div>

</div>

<div class="p-host">

  <div class="wrp">
    <h3 style="font-family: Georgia;font-size: 38px;padding-top: 0px;">Become a Space host</h3>
    <p style="font-size: 24px;font-weight: 400;padding: 10px 0px 30px;">
      Make the most of your space with our Tools
      Stay organized, manage leads, and track your earnings - all in one place.
    </p>
    <%= link_to "List Your space", new_space_path, class: "btn btn-success", style: "background-color: #ffce4b;font-size: 18px;width: 210px;height: 50px;text-align: center;line-height: 40px;color: #262629;border: none;display: block;text-decoration: none;margin: 0px auto;font-weight: bold;" %>
  </div>

</div>



