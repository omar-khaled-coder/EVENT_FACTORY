<div class="hero-section">
  <div class="hero-content">
    <h1>Find Your Perfect Space</h1>
    <%= form_with url: spaces_path, method: :get, local: true, class: "search-form" do %>
      <%= text_field_tag :city, params[:city], placeholder: "Search by city", class: "search-input" %>
      <%= select_tag :space_type, options_for_select(["Event Venue", "Co-working Space", "Studio", "Classroom"], params[:space_type]), prompt: "Space Type", class: "search-select" %>
      <button type="submit" class="search-btn">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    <% end %>
  </div>
</div>


<!-- Space Types Section -->
<div class="space-types">
  <h2>Explore Space Types</h2>
  <div class="space-type-grid">
    <% ["Event Venue", "Co-working Space", "Studio","Wedding", "Shooting Location", "Pop-ups", "Rooftop", "Ceremony", "Prom Party", "Bachelor/Bachelorette Party", "Anniversary Party", "Conference",
        "Workshop", "Classroom", "BirthDay parties", "Launch Event", "Art Show", "Meeting", "Corporate Event", "Media Event", "Outdoor Event",].each do |space_type| %>
      <%= link_to spaces_path(space_type: space_type), class: "space-type-card #{space_type.parameterize}" do %>
        <div class="space-type-content">
          <h3><%= space_type %></h3>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="how-it-works">
  <h2> How it Works </h2>
  <div>
  </div>
</div>

