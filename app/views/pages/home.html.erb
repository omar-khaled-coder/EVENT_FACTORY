<!-- app/views/pages/home.html.erb -->
<div class="hero-section">
  <div class="hero-content">
    <h1>Find Unique Spaces for Your Next Event</h1>
    <form class="search-bar">
      <input type="text" placeholder="Where do you need a space?" class="search-input">
      <button type="submit" class="search-button">Search</button>
    </form>
  </div>
</div>

<div class="featured-spaces-section">
  <h2>Explore Featured Spaces</h2>
  <div class="featured-grid">
    <% @spaces.each do |space| %>
     <div class="space-card">
  <%= link_to space_path(space) do %>
    <% if space.images.attached? %>
      <%= image_tag space.images.first, class: "space-image", alt: "Space Image" %>
    <% else %>
      <%= image_tag 'default-space-image.jpg', class: "space-image", alt: "Default Space Image" %> <!-- Fallback image -->
    <% end %>
    <h3><%= space.title %></h3>
    <p><%= space.city %> | <%= country_name(space.country) %></p>
    <p><%= number_to_currency(space.price_per_hour) %> per hour</p>
  <% end %>
</div>

    <% end %>
  </div>
</div>

<div class="categories-section">
  <h2>Explore Spaces by Type</h2>
  <div class="categories-grid">
    <div class="category-card">
      <%= link_to "Event Venues", spaces_path(space_type: "Event Venue") %>
      <%= image_tag "event-venue.jpg", alt: "Event Venue" %>
    </div>
    <div class="category-card">
      <%= link_to "Co-working Spaces", spaces_path(space_type: "Co-working Space") %>
      <%= image_tag "coworking-space.jpg", alt: "Co-working Space" %>
    </div>
    <!-- Add more categories as needed -->
  </div>
</div>

<div class="become-host-section">
  <h2>Become a Host</h2>
  <p>Share your space and earn extra income by hosting guests for events.</p>
  <%= link_to "List Your Space", new_space_path, class: "btn btn-primary" %>
</div>


<style>
 /* Hero Section */
.hero-section {
  background-image: url('/assets/hero-bg.jpg'); /* Replace with your own image */
  background-size: cover;
  background-position: center;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  text-align: center;
}

.hero-content h1 {
  font-size: 3rem;
  margin-bottom: 20px;
}

.search-bar {
  display: flex;
  gap: 10px;
}

.search-input {
  padding: 15px;
  font-size: 1.2rem;
  width: 400px;
}

.search-button {
  padding: 15px 30px;
  font-size: 1.2rem;
  background-color: #ff385c;
  color: white;
  border: none;
  cursor: pointer;
}

/* Featured Spaces Section */
.featured-spaces-section {
  padding: 50px;
  text-align: center;
}

.featured-grid {
  display: grid;
  gap: 20px;
  grid-template-columns: repeat(3, 1fr); /* 3 columns per row */
}

.space-card {
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.space-card img {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.space-card h3 {
  font-size: 1.25rem;
  margin: 10px 0;
}

/* Categories Section */
.categories-section {
  padding: 50px;
  text-align: center;
}

.categories-grid {
  display: flex;
  gap: 20px;
}

.category-card {
  flex: 1;
  text-align: center;
  border-radius: 10px;
  overflow: hidden;
  background-color: #f8f8f8;
}

.category-card img {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

/* Become a Host Section */
.become-host-section {
  background-color: #f8f8f8;
  padding: 50px;
  text-align: center;
}

.btn-primary {
  padding: 10px 20px;
  font-size: 1.2rem;
  background-color: #ff385c;
  color: white;
  border: none;
  cursor: pointer;
}

/* Footer Section */
.footer-section {
  background-color: #333;
  padding: 30px;
  text-align: center;
  color: white;
}

.footer-links a {
  color: white;
  margin: 0 15px;
  text-decoration: none;
}

</style>
